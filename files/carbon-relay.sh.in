#!/bin/sh

case "$1" in
start)
	echo -n 'Starting carbon-relay...'
	%%GRAPHITE_BASE%%/bin/carbon-relay.py start
	[ "$?" -eq "0" ] && echo " OK" || echo " Failed"
	;;
stop)
	%%GRAPHITE_BASE%%/bin/carbon-relay.py stop
	sleep 3
	;;
status)
	%%GRAPHITE_BASE%%/bin/carbon-relay.py status
	;;
restart)
	%%GRAPHITE_BASE%%/bin/carbon-relay.py stop
	sleep 3
	echo -n 'Starting carbon-relay...'
	%%GRAPHITE_BASE%%/bin/carbon-relay.py start
	[ "$?" -eq "0" ] && echo " OK" || echo " Failed"
	;;
*)
	echo "Usage: `basename $0` {start|stop|restart|status}" >&2
	;;
esac

exit 0
